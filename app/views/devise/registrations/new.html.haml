.container.position-relative.px-4.px-lg-5
	.row.gx-4.gx-lg-5.justify-content-center
		.col-md-10.col-lg-8.col-xl-7
			%h1 Sign up
%hr.my-4/
#append_team.container.px-4.px-lg-5
	.container.px-4.px-lg-5
		.row.gx-4.gx-lg-5.justify-content-center
			.col-md-10.col-lg-8.col-xl-7
				.row
					= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
						= render "devise/shared/error_messages", resource: resource
						.field
							= f.label :first_name
							%br/
							= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control"
						.field
							= f.label :last_name
							%br/
							= f.text_field :last_name, autocomplete: "last_name", class: "form-control"
						.field
							= f.label :date_of_birth
							%br/
							.input-group.date{"data-provide":'datepicker' }
								= f.text_field :DOB, class: "form-control"
								.input-group-addon
									%span.glyphicon.glyphicon-th
						.field
							= f.label :email
							%br/
							= f.email_field :email, autocomplete: "email", class: "form-control"
						.field
							= f.label :password
							- if @minimum_password_length
								%em
									(#{@minimum_password_length} characters minimum)
							%br/
							= f.password_field :password, autocomplete: "new-password", class: "form-control"
						.field
							= f.label :password_confirmation
							%br/
							= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"
						%br/
						.actions
							= f.submit "Sign up", class: "btn btn-outline-secondary form-control"
					= render "devise/shared/links"
:javascript
	$('.datepicker').datetimepicker();
