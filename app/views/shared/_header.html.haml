%body
  %nav#mainNav.navbar.navbar-expand-lg.navbar-light
    .container.px-4.px-lg-5
      %a.navbar-brand{:href => "index.html"} Team Management
      %button.navbar-toggler{"aria-controls" => "navbarResponsive", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarResponsive", "data-bs-toggle" => "collapse", :type => "button"}
        Menu
        %i.fas.fa-bars
      #navbarResponsive.collapse.navbar-collapse
        %ul.navbar-nav.ms-auto.py-4.py-lg-0
          %li.nav-item
            %a.nav-link.px-lg-3.py-3.py-lg-4{:href => "/pages/home"} Home
          - if current_user
            %li.nav-item
              = link_to "Sign Out", destroy_user_session_path, class: "nav-link px-lg-3 py-3 py-lg-4", method: :delete
          - else
            %li.nav-item
              %a.nav-link.px-lg-3.py-3.py-lg-4{:href => "/users/sign_up"} Sign up
            %li.nav-item
              %a.nav-link.px-lg-3.py-3.py-lg-4{:href => "/users/sign_in"} Log in
  %header.masthead{:style => "background-image: url('#{asset_path("home-bg.jpg")}')"}
    .container.position-relative.px-4.px-lg-5
      .row.gx-4.gx-lg-5.justify-content-center
        .col-md-10.col-lg-8.col-xl-7
          .site-heading
            %h1 Team shift schedule
            %span.subheading Schedule shift of team
